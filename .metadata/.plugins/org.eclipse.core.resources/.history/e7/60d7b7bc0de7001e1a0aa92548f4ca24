package br.com.senaisp.bauru.giulia.secao05;

import java.util.Scanner;

public class JavaLibsPractice {
    public static void main(String[] args) {
        Scanner Scanner = new Scanner(System.in);

        // Solicitar entradas do usuário
        System.out.println("Bem-vindo ao JavaLibs! Vamos começar a criar uma história.");
        System.out.print("Digite um nome de pessoa: ");
        String nome = Scanner.nextLine();
        System.out.print("Digite um adjetivo: ");
        String adjetivo = Scanner.nextLine();
        System.out.print("Digite uma profissão: ");
        String profissao = Scanner.nextLine();
        System.out.print("Digite um número inteiro: ");
        int numeroInteiro = Scanner.nextInt();
        System.out.print("Digite um número decimal: ");
        double numeroDecimal = Scanner.nextDouble();
        System.out.print("Digite uma cidade: ");
        String cidade = Scanner.nextLine(); // Limpar o buffer
        cidade = Scanner.nextLine(); // Ler a entrada corretamente
        System.out.print("Digite um animal: ");
        String animal = Scanner.nextLine();
        System.out.print("Digite um verbo no presente: ");
        String verboPresente = Scanner.nextLine();
        System.out.print("Digite um verbo no passado: ");
        String verboPassado = Scanner.nextLine();
        System.out.print("Digite um substantivo: ");
        String substantivo = Scanner.nextLine();

        // Realizar cálculos
        int dobroDoNumeroInteiro = numeroInteiro * 2;
        double metadeDoNumeroDecimal = numeroDecimal / 2;

        // Imprimir a história resultante
        System.out.println("\nAqui está a história que criamos:");

        System.out.println("Uma vez, em " + cidade + ", havia um(a) " + profissao + " chamado(a) " + nome + ".");
        System.out.println(nome + " era muito " + adjetivo + " e tinha um(a) " + animal + " de estimação.");
        System.out.println("Todos os dias, " + nome + " costumava " + verboPresente + " antes de ir trabalhar.");
        System.out.println("Um dia, " + nome + " " + verboPassado + " seu " + animal + " e teve que ir ao hospital.");
        System.out.println("Felizmente, " + nome + " se recuperou rapidamente e voltou a trabalhar.");
        System.out.println("Mas agora, " + nome + " sempre carrega consigo um(a) " + substantivo + ".");
        System.out.println("E todo mundo sabia que o número da sorte de " + nome + " era " + dobroDoNumeroInteiro + ".");
        System.out.println("E sempre que precisava de sorte, " + nome + " dividia seu número da sorte, que era " + metadeDoNumeroDecimal + ", com um amigo.");

        // Fechar o scanner
        Scanner.close();
    }
}